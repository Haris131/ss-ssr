#!/bin/bash
clear;echo "######################################"
echo -e "   Auto installer Shadowsocks + ShadowsocksR\n######################################\n"
echo "Installing, Tunggu....."
mkdir -p /root/installer
url="https://github.com/Haris131/ss-ssr/raw/main"
wget -O /root/installer $url/simple-obfs_0.0.5-5_aarch64_cortex-a53.ipk -q
wget -O /root/installer $url/shadowsocksr-libev_2018-03-07-d63ff863800a5645aca4309d5dd5962bd1e95543_aarch64_cortex-a53.ipk -q
wget -O /root/installer $url/shadowsocks-libev_3.3.5-1_aarch64_cortex-a53.ipk -q
wget -O /root/installer $url/mbedtls-util_2.16.2-2_aarch64_cortex-a53.ipk -q
wget -O /root/installer $url/libsodium_1.0.18-1_aarch64_cortex-a53.ipk -q
wget -O /root/installer $url/libmbedtls12_2.16.2-2_aarch64_cortex-a53.ipk -q
wget -O /root/installer $url/libev_4.27-1_aarch64_cortex-a53.ipk -q
wget -O /root/installer $url/libcares_1.15.0-4_aarch64_cortex-a53.ipk -q
wget -O /root/installer $url/luci-app-shadowsocksr_1.9.1-2_all.ipk -q
wget -O /root/installer $url/luci-app-shadowsocks_1.9.1-1_all.ipk -q
opkg install /root/installer/*.ipk
rm -rf installer
echo -e "Shadowsocks + ShadowsocksR terinstall.\n\nSilahkan Akses via luci"
echo "Terima kasih -salam haris setyawan."
